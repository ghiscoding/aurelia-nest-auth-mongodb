{
  "name": "aurelia-nest-mongo-graphql",
  "type": "project:application",
  "paths": {
    "root": "src",
    "resources": "resources",
    "elements": "resources/elements",
    "attributes": "resources/attributes",
    "valueConverters": "resources/value-converters",
    "bindingBehaviors": "resources/binding-behaviors"
  },
  "transpiler": {
    "id": "typescript",
    "fileExtension": ".ts"
  },
  "build": {
    "options": {
      "server": "dev",
      "extractCss": "prod",
      "coverage": false
    }
  },
  "platform": {
    "compress": true,
    "liveReload": true,
    "historyApiFallback": true,
    "hmr": false,
    "open": true,
    "port": 9000,
    "host": "localhost",
    "output": "dist",
    "outputProd": "dist"
  },
  "packageManager": "yarn"
}
